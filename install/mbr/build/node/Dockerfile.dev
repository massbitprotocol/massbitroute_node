ARG VERSION="latest"
FROM massbit/massbitroute_basenode_dev:$VERSION
MAINTAINER "Vu Tran<baysao@massbit.io>"

ARG BRANCH=testing

ENV MBR_ENV=${BRANCH} MBR_MODE=docker MBR_ROLE=node DEBIAN_FRONTEND=noninteractive

# RUN DEBIAN_FRONTEND=noninteractive apt-get update \
#     && DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends ca-certificates curl apt-utils git \
RUN \
  echo  git clone https://github.com/massbitprotocol/massbitroute_node.git /massbit/massbitroute/app/src/sites/services/node -b $MBR_ENV \
&&    git clone https://github.com/massbitprotocol/massbitroute_node.git /massbit/massbitroute/app/src/sites/services/node -b $MBR_ENV \
&& bash -x /massbit/massbitroute/app/src/sites/services/node/scripts/run _install \
    ; mkdir -p /var/log/supervisor \
    ; rm -rf /var/lib/apt/lists/* \
    ; echo user=root >>  /etc/supervisor/supervisord.conf
CMD ["-n"]
ENTRYPOINT  ["/usr/bin/supervisord"]
