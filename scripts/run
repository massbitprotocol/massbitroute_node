#!/bin/bash
SITE_ROOT=$(realpath $(dirname $(realpath $0))/..)
export HOME=/tmp
cd $SITE_ROOT
source $SITE_ROOT/.env
git="git -C $SITE_ROOT"

mbr_cli="/massbit/massbitroute/app/src/sites/services/node/mbr"
script_run="/massbit/massbitroute/app/src/sites/services/node/scripts/run"
cmd="/massbit/massbitroute/app/src/sites/services/node/cmd_server"
nginx="$cmd nginx"
_git_config() {
	$git config --global user.name "Vu Tran"
	$git config --global user.email "baysao@gmail.com"
}
_reload() {
	$nginx -s reload
}

loop() {
	while true; do
		$0 $@
		sleep 10
	done
}
_monitor() {
	is_reload=0
	id=$(cat $SITE_ROOT/vars/ID)
	curl -sSfL $MBR_API/deploy/node/${id}.conf -o http.d/${id}.conf.new
	diff http.d/${id}.conf http.d/${id}.conf.new
	if [ $? -ne 0 ]; then
		mv http.d/${id}.conf.new http.d/${id}.conf
		is_reload=1
	fi
	$git pull | grep -i "updating"
	if [ $? -eq 0 ]; then
		is_reload=1
	fi
	if [ $is_reload -ne 0 ]; then
		$0 _reload
	fi
	$mbr_cli node ping
}

_run() {
	$SITE_ROOT/start_server
}

$@
